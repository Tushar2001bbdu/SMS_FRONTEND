{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true, // Allow JavaScript files to be a part of the project
    "checkJs": false, // Disable error checking for JavaScript files
    "jsx": "preserve", // Enable JSX for React
    "resolveJsonModule": true, // Allow importing JSON files
    "outDir": "./build", // Directory where compiled files will go
    "noEmit": false, // Allow TypeScript to emit JavaScript
    "moduleResolution": "node",
    "baseUrl": ".", // Ensure that module imports are relative to the root
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", // Include TypeScript and JSX files
    "**/*.js", // Include JavaScript files
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
